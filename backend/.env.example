# Instituto Educa - Variables de Entorno
# Copiar este archivo como .env y configurar según tu entorno

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=instituto_educa

# ========================================
# CONFIGURACIÓN DEL SERVIDOR
# ========================================
PORT=3003
NODE_ENV=development

# ========================================
# SEGURIDAD
# ========================================
JWT_SECRET=instituto_educa_2025_secret_key_super_segura
JWT_EXPIRES_IN=24h

# ========================================
# CORS Y FRONTEND
# ========================================
FRONTEND_URL=http://localhost:8888
ALLOWED_ORIGINS=http://localhost:8888,http://127.0.0.1:8888

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW=1
RATE_LIMIT_MAX=10000

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ========================================
# FEATURES
# ========================================
ENABLE_GEOLOCATION=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# ========================================
# UPLOADS
# ========================================
UPLOAD_MAX_SIZE=5MB
UPLOAD_PATH=uploads/

# ========================================
# BACKUP
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
